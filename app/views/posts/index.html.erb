<div class = "posts-index">
   <% @posts.each do |post|  %>
      <div class = "post-item  clearfix">
          <%  @book = Book.find_by(id: post.book_image_name) %>
          <%  @user = User.find_by(id: post.user_id)  %>                                    
            <div class = "post-left"> 
                 <!--投稿者情報-->
                 <img class = "user-post-image" src = "<%= "/user_images/#{@user.user_image_name}"  %>"  %>
                  <p><%= @user.name    %></p>
                 <!--本の画像を表示-->
                <% @bit_url_ex = @book.book_image_name.split('')  %>
                <% @bit_url = @bit_url_ex[-4] + @bit_url_ex[-3] + @bit_url_ex[-2] + @bit_url_ex[-1] %>
               <img src = "https://thumbnail.image.rakuten.co.jp/@0_mall/book/cabinet/<%= @bit_url %>/<%= @book.book_image_name  %>.jpg?_ex=200x200" class = "post-book-img">
           </div>
          <div class = "post-right">
              <%= post.content %>
          </div>
      </div>
   <% end %>
    <div class ="clear"></div>
</div>